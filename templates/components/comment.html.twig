<div class="comment mb-3">
    <div class="row comment__row">
        <div class="comment__owner">
            {{ comment.owner.commentName }}
        </div>
        <div class="comment__date">
            {{ comment.dateOfCreation|date('d.m.Y') }}
        </div>
    </div>
    <div class="comment__content">
        {{ comment.body }}
    </div>
</div>